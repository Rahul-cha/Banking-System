@model List<UserDetails>

</div>

<h1> User Details</h1>

<table class="table table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Account Type</th>
            <th>Account Balance</th>
            <th>Interest</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            @*<a asp-controller="Home" asp-action="Index" asp-route-id="@obj.">*@
                <tr>
                    <td width="25%">
                    @obj.Account_Id
                    </td>
                    <td width="25%">
                    @obj.Account_Type
                    </td>
                    <td width="25%">
                    @obj.Balance
                    </td>
                    <td width="25%">
                    @obj.Interest
                    </td>
                </tr>
            @*</a>*@
        }
    </tbody>

</table>


</div> 